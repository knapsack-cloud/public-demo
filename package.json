{
  "name": "@knapsack-cloud/public-demo",
  "private": true,
  "description": "Knapsack Public Demo",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "lerna run clean && rm -rf ./ks-public/dist",
    "build": "run-s -l prep ks:build",
    "prep": "run-s -l prep:react prep:tokens prep:styles prep:wc",
    "prep:tokens": "knapsack --config ./knapsack.config.cjs build:tokens",
    "prep:react": "yarn --cwd ./packages/react clean && yarn --cwd ./packages/react build",
    "prep:styles": "yarn --cwd ./packages/styles build",
    "prep:wc": "yarn --cwd ./packages/web-components build",
    "pkgs:build": "lerna run build",
    "pkgs:start": "lerna exec --ignore @knapsack-cloud/public-demo-html --ignore @knapsack-cloud/public-demo-shared-types --ignore @knapsack-cloud/public-demo-design-tokens --parallel -- yarn start",
    "ks:build": "NODE_ENV=production knapsack build",
    "ks:serve": "NODE_ENV=production KNAPSACK_PORT=${PORT} knapsack serve",
    "ks:test": "knapsack test",
    "ks:start": "knapsack start",
    "serve": "npm run ks:serve",
    "start": "run-p -l *:start",
    "update-knapsack": "npx @knapsack/update@latest",
    "test": "run-s --print-name *:test"
  },
  "dependencies": {
    "@auto-it/released": "^11.1.1",
    "@knapsack/app": "^4.71.9",
    "@knapsack/babel-config": "^4.71.9",
    "@knapsack/core": "^4.71.9",
    "@knapsack/design-token-utils": "^4.71.9",
    "@knapsack/plugin-changelog-md": "^4.71.9",
    "@knapsack/renderer-html": "^4.71.9",
    "@knapsack/renderer-react": "^4.71.9",
    "@knapsack/renderer-web-components": "^4.71.9",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "auto": "^11.1.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "18",
    "react-dom": "18",
    "sass": "^1.32.11",
    "tslib": "^2.0.0",
    "typescript": "^4.9.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "engines": {
    "node": "18.20.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "KnapsackBot",
    "email": "53622700+KnapsackBot@users.noreply.github.com"
  },
  "repository": "https://github.com/knapsack-cloud/public-demo"
}
