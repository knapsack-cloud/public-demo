{
  "include": [
    "src", "utils"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declarationMap": true,
    "preserveWatchOutput": true,
    "pretty": true,
    "checkJs": true,
    "jsx": "react",
    "target": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "moduleResolution": "node"
  }
}