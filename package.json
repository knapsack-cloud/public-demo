{
  "name": "@knapsack-cloud/demo-design-system",
  "private": true,
  "version": "1.7.1",
  "description": "Knapsack workspace for the demo design system",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf ./ks-public/dist ./dist",
    "ui:watch": "yarn ui:build -w",
    "ui:build": "rollup -c ./rollup.config.js",
    "build": "NODE_ENV=production run-s sd:build tailwind:build ui:build ks:build",
    "ks:build": "NODE_ENV=production knapsack build",
    "ks:serve": "NODE_ENV=production KNAPSACK_PORT=${PORT} knapsack serve",
    "ks:test": "knapsack test",
    "ks:start": "knapsack start",
    "prep": "([ -f ./ks-public/dist/index.css ] || yarn ui:build) && yarn sd:build",
    "prep:tailwind": "[ -f ./ks-public/dist/tailwind.min.css ] || yarn tailwind:build",
    "start": "run-s prep prep:tailwind && run-p *:watch ks:start",
    "watch": "run-p ui:watch",
    "test": "run-s --print-name *:test",
    "tailwind:build": "cp ./node_modules/tailwindcss/dist/tailwind.min.css ./node_modules/tailwindcss/dist/tailwind-dark.min.css ./ks-public/dist",
    "sd:build": "style-dictionary build --config ./style-dictionary.config.js",
    "sd:watch": "nodemon --watch './src/design-tokens' --exec 'yarn sd:build'"
  },
  "dependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.1",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-proposal-optional-chaining": "^7.13.0",
    "@knapsack/app": "^3.14.2",
    "@knapsack/babel-config": "^3.14.2",
    "@knapsack/build-tools": "^3.14.2",
    "@knapsack/core": "^3.14.2",
    "@knapsack/plugin-changelog-md": "^3.14.2",
    "@knapsack/renderer-angular": "^3.14.2",
    "@knapsack/renderer-react": "^3.14.2",
    "@knapsack/renderer-twig": "^3.14.2",
    "@knapsack/renderer-vue": "^3.14.2",
    "@knapsack/renderer-web-components": "^3.14.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/webpack-dev-server": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.10",
    "classnames": "^2.2.6",
    "daemonite-material": "^4.1.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "http-proxy-middleware": "^1.0.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "lit-element": "^2.2.1",
    "lodash.template": "^4.4.0",
    "node-sass-magic-importer": "^5.3.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.16.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.2",
