<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
  {% if imgSrc %}
    <div class="flex-shrink-0">
      <img class="h-48 w-full object-cover"
        src="{{ imgSrc }}"
        alt="" />
    </div>
  {% endif %}
  <div class="flex-1 bg-white dark:bg-gray-900 dark:text-white p-6 flex flex-col justify-between">
    <div class="flex-1">
      {% if label %}
        <p class="text-sm font-medium text-indigo-600 dark:text-indigo-300">
          <a href="#" class="hover:underline">{{ label }}</a>
        </p>
      {% endif %}
      {% if title or body %}
      <a href="#" class="block mt-2">
        {% if title %}
          <p class="text-xl font-semibold text-gray-900 dark:text-white">
            Improve your customer experience
          </p>
        {% endif %}
        {% if body %}
          <p class="mt-3 text-base text-gray-500 dark:text-gray-200">
            {{ body }}
          </p>
        {% endif %}
      </a>
      {% endif %}
    </div>
    {% if children %}
      <div class="ks-card-child-wrapper">
        {{ children }}
      </div>
    {% endif %}
  </div>
</div>
