{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "json", "react", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["*.json"],
      "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
