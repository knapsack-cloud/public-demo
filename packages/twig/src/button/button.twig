{% set size = size ? size : 'medium' %}
{% if size == 'small' %}
  {% set sizeClasses = 'px-4 py-1.5 text-sm' %}
{% elseif size == 'medium' %}
  {% set sizeClasses = 'px-9 py-2.5 text-lg' %}
{% elseif size == 'large' %}
  {% set sizeClasses = 'px-10 py-4 text-xl' %}
{% endif %}

{% set mode = mode ? mode : 'info' %}
{% if mode == 'success' %}
  {% set modeColor = "green" %}
{% elseif mode == 'info' %}
  {% set modeColor = "blue" %}
{% elseif mode == 'warning' %}
  {% set modeColor = "orange" %}
{% elseif mode == 'danger' %}
  {% set modeColor = "red" %}
{% elseif mode == 'alert' %}
  {% set modeColor = "yellow" %}
{% elseif mode == 'special' %}
  {% set modeColor = "orchid" %}
{% endif %}

{% set buttonTextColor = 'white' %}
{% if type == 'outline' %}
  {% set buttonTextColor = "base-#{modeColor}" %}
{% endif %}


{% if icon.align is defined %}
  {% set iconClasses = "ks-button--icon ks-button--icon-#{icon.align}" %}
{% endif %}

{% set classes = [
  'ks-button',
  'w-full flex items-center justify-center',
  'text-base font-medium',
  'rounded-md border-4 border-transparent',
  "text-#{buttonTextColor}",
  "bg-#{type ? type : 'solid'}",
  "bg-base-#{modeColor}",
  "border-base-#{modeColor}",
  "#{icon.align and icon.svg ? iconClasses }",
  sizeClasses,
  mode
]  | join(' ') | trim %}

<a href="{{ url }}" class="{{ classes }}">{% if icon.align is defined and icon.svg is defined %}{{ icon.svg }}{% endif %}<span>{{ text }}</span></a>