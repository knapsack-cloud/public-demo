{
  "name": "@knapsack-cloud/demo-design-system",
  "private": true,
  "description": "Knapsack Demo Design System",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "lerna run clean && rm -rf ./ks-public/dist",
    "build": "run-s -l prep ks:build ng-app:build",
    "prep": "run-s -l prep:tokens prep:styles prep:wc prep:meta prep:react",
    "prep:meta": "yarn knapsack build:meta --loglevel error",
    "prep:tokens": "[ -d ./packages/design-tokens/dist ] || yarn knapsack build:tokens",
    "prep:styles": "[ -d ./packages/styles/dist ] || yarn --cwd ./packages/styles build",
    "prep:react": "[ -d ./packages/react/dist ] || yarn --cwd ./packages/react build",
    "prep:wc": "yarn --cwd ./packages/web-components build",
    "pkgs:build": "lerna run build",
    "pkgs:start": "lerna exec --ignore @knapsack-cloud/demo-design-system-html --ignore @knapsack-cloud/demo-design-system-shared-types --ignore @knapsack-cloud/demo-design-system-handlebars --ignore @knapsack-cloud/demo-design-system-twig --ignore @knapsack-cloud/demo-design-system-design-tokens --ignore @knapsack-cloud/demo-design-system-vue --parallel -- yarn start",
    "ks:build": "NODE_ENV=production knapsack build",
    "ks:serve": "NODE_ENV=production KNAPSACK_PORT=${PORT} knapsack serve",
    "ks:test": "knapsack test",
    "ks:start": "knapsack start",
    "ng-app:start": "ng build knapsack-renderer-angular-app --watch",
    "ng-app:build": "ng build knapsack-renderer-angular-app",
    "start": "run-p -l *:start",
    "test": "run-s --print-name *:test"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular/cli": "~13.1.2",
    "@angular/common": "~13.1.1",
    "@angular/compiler": "~13.1.1",
    "@angular/compiler-cli": "~13.1.1",
    "@angular/core": "~13.1.1",
    "@angular/elements": "^13.1.1",
    "@auto-it/released": "^10.20.4",
    "@knapsack/app": "^3.28.3",
    "@knapsack/design-token-utils": "^3.28.3",
    "@knapsack/babel-config": "^3.28.3",
    "@knapsack/build-tools": "^3.28.3",
    "@knapsack/core": "^3.28.3",
    "@knapsack/plugin-changelog-md": "^3.28.3",
    "@knapsack/renderer-angular": "^3.28.3",
    "@knapsack/renderer-html": "^3.28.3",
    "@knapsack/renderer-hbs": "^3.28.3",
    "@knapsack/renderer-react": "^3.28.3",
    "@knapsack/renderer-twig": "^3.28.3",
    "@knapsack/renderer-web-components": "^3.28.3",
    "@knapsack/renderer-vue": "^3.28.3",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "ng-packagr": "^13.1.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "replace-in-file": "^6.2.0",
    "sass": "^1.32.11",
    "typescript": "~4.5.4",
    "auto": "^10.20.4",
    "lerna": "^4.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "engines": {
    "node": ">=12.0.0 || >=14.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "KnapsackBot",
    "email": "53622700+KnapsackBot@users.noreply.github.com"
  },
  "repository": "https://github.com/knapsack-cloud/demo-design-system"
}
